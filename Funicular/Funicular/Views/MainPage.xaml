<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Funicular"
             x:Class="Funicular.Views.MainPage"
             xmlns:viewModels="clr-namespace:Funicular.ViewModels;assembly=Funicular"
             xmlns:base="clr-namespace:Funicular.Base;assembly=Funicular"
             NavigationPage.HasNavigationBar="False"
             
             base:ViewModelLocator.AutoWireViewModel="true"
>
    <ContentPage.BindingContext>
        <viewModels:MainPageViewModel />
    </ContentPage.BindingContext>
    <StackLayout>
        <!-- Place new controls here -->
        <Label Text="Welcome to Xamarin.Forms!" 
           HorizontalOptions="Center"
           VerticalOptions="CenterAndExpand" />
        
        <Button x:Name="btn" Text="Next Page" Command="{Binding ButtonSelectedCommand}"></Button>  
    </StackLayout>

</ContentPage>
